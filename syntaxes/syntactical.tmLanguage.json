{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Syntactical",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#string-double"},
		{"include": "#string-single"},
		{"include": "#numbers"},
		{"include": "#use"}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.syntactical",
					"match": "\\b(if|else|while|for|in|return|break|func|class|with)\\b"
				},
				{
					"name": "comment.line.double-slash.syntactical",
					"match": "//.*$"
				}
			]
		},
		"string-double": {
			"name": "string.quoted.double.syntactical",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.syntactical",
					"match": "\\\\."
				}
			]
		},
		"string-single": {
			"name": "string.quoted.single.syntactical",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.syntactical",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.integer.syntactical",
					"match": "\\b(\\d+)\\b"
				},
				{
					"name": "constant.numeric.decimal.syntactical",
					"match": "\\b(\\d+\\.\\d+)\\b"
				}
			]
		},
		"use": {
			"match": "\\b(use|from|as)\\b",
			"name": "keyword.control.use.syntactical"
		}
	},
	"scopeName": "source.syntactical"
}